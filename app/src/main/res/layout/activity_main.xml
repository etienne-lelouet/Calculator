<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etien.calculatrice.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="344dp"
        android:layout_height="138dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#98FB98"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idoperande1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idsymbole"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idoperande2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:context=".GridXMLActivity"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/bt1"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:background="@drawable/operandebg"
            android:textColor="#FF0000"
            android:text="C" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/operandebg"
            android:text="(-)" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/operandebg"
            android:text="R" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@drawable/operandebg"
            android:text="/" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/buttonbg"
            android:text="7" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/buttonbg"
            android:text="8" />

        <Button
            android:id="@+id/bt7"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/buttonbg"
            android:text="9" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@drawable/operandebg"
            android:text="*"/>
        <Button
            android:id="@+id/bt9"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/buttonbg"
            android:text="4" />

        <Button
            android:id="@+id/bt10"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/buttonbg"
            android:text="5" />

        <Button
            android:id="@+id/bt11"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/buttonbg"
            android:text="6" />

        <Button
            android:id="@+id/bt12"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@drawable/operandebg"
            android:text="-" />

        <Button
            android:id="@+id/bt13"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/buttonbg"
            android:text="1" />

        <Button
            android:id="@+id/bt14"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/buttonbg"
            android:text="2" />

        <Button
            android:id="@+id/bt15"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@drawable/buttonbg"
            android:text="3" />

        <Button
            android:id="@+id/bt16"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@drawable/operandebg"
            android:text="+" />

        <Button
            android:id="@+id/bt17"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/buttonbg"
            android:text="0" />

        <Button
            android:id="@+id/bt18"
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:layout_column="1"
            android:layout_row="4"
            android:background="@drawable/buttonbg"
            android:text="." />

        <Button
            android:id="@+id/bt19"
            android:layout_width="170dp"
            android:layout_height="68dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:background="@drawable/egalbg"
            android:text="=" />


    </GridLayout>


</android.support.constraint.ConstraintLayout>
